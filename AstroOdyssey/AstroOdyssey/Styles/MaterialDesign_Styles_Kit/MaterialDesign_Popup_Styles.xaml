                            <DropShadowEffect
                                x:Name="DropShadowEffect"
                                BlurRadius="10"
                                Direction="-30"
                                Opacity="0.4"
                                ShadowDepth="0"
                                Color="Gray" />
                        </Border.Effect>
                        <Grid
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="Stretch"
